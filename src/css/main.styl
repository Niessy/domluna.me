@import "../../node_modules/tachyons/css/tachyons.css"

body
  font-family: -apple-system, BlinkMacSystemFont, sans-serif

article
  img
    height: auto
    margin: auto
    display: block
    padding: 1rem 0
    max-width: 100%

article
  a
    @extends .dim, .dib
    text-decoration: underline;

code, pre, kbd, samp
  overflow-x: scroll
  font-size: 70%
  padding: 1rem;
  margin-top: 2rem;
  margin-bottom: 2rem;
  border-left: 4px solid rgba(0, 0, 0, .0625)
  background-color: #fafafa

